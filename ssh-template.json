{
  "family": "dev-gerrit-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::{{aws-acc-id}}:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "dev_gerrit",
      "image": "lscr.io/linuxserver/openssh-server:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 22, "hostPort": 22, "protocol": "tcp" }
      ],
      "mountPoints": [
          {
              "sourceVolume": "dev_gerrit_etc",
              "containerPath": "/var/gerrit/etc"
          },
          {
              "sourceVolume": "dev_gerrit_lib",
              "containerPath": "/var/gerrit/lib"
          },
          {
              "sourceVolume": "dev_gerrit_git",
              "containerPath": "/var/gerrit/git"
          },
          {
              "sourceVolume": "dev_gerrit_db",
              "containerPath": "/var/gerrit/db"
          },
          {
              "sourceVolume": "dev_gerrit_cache",
              "containerPath": "/var/gerrit/cache"
          },
          {
              "sourceVolume": "dev_gerrit_index",
              "containerPath": "/var/gerrit/index"
          },
          {
              "sourceVolume": "dev_gerrit_plugins",
              "containerPath": "/var/gerrit/plugins"
          }
      ],
      "environment": [
          {
              "name": "PASSWORD_ACCESS",
              "value": "true"
          },
          {
              "name": "USER_NAME",
              "value": "{{username}}"
          },
          {
              "name": "USER_PASSWORD",
              "value": "{{password}}"
          }
      ],
      "volumesFrom": [],
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "lf_dev_gerrit",
              "awslogs-region": "us-east-1",
              "awslogs-stream-prefix": "lf-dev-gerrit-logstream"
          }
      },
      "systemControls": []
    }
  ],
  "volumes": [
      {
          "name": "dev_gerrit_etc",
          "efsVolumeConfiguration": {
              "fileSystemId": "{{fs-etc}}",
              "rootDirectory": "/",
              "transitEncryption": "ENABLED"
          }
      },
      {
          "name": "dev_gerrit_git",
          "efsVolumeConfiguration": {
              "fileSystemId": "{{fs-git}}",
              "rootDirectory": "/",
              "transitEncryption": "ENABLED"
          }
      },
      {
          "name": "dev_gerrit_db",
          "efsVolumeConfiguration": {
              "fileSystemId": "{{fs-db}}",
              "rootDirectory": "/",
              "transitEncryption": "ENABLED"
          }
      },
      {
          "name": "dev_gerrit_index",
          "efsVolumeConfiguration": {
              "fileSystemId": "{{fs-index}}",
              "rootDirectory": "/",
              "transitEncryption": "ENABLED"
          }
      },
      {
          "name": "dev_gerrit_lib",
          "efsVolumeConfiguration": {
              "fileSystemId": "{{fs-lib}}",
              "rootDirectory": "/",
              "transitEncryption": "ENABLED"
          }
      },
      {
          "name": "dev_gerrit_cache",
          "efsVolumeConfiguration": {
              "fileSystemId": "{{fs-cache}}",
              "rootDirectory": "/",
              "transitEncryption": "ENABLED"
          }
      },
      {
          "name": "dev_gerrit_plugins",
          "efsVolumeConfiguration": {
              "fileSystemId": "{{fs-plugins}}",
              "rootDirectory": "/",
              "transitEncryption": "ENABLED"
          }
      }
  ]
}
