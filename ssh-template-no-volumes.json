{
  "family": "dev-gerrit-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::{{aws-acc-id}}:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "dev_gerrit",
      "image": "lscr.io/linuxserver/openssh-server:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 22, "hostPort": 22, "protocol": "tcp" }
      ],
      "mountPoints": [
      ],
      "environment": [
          {
              "name": "PASSWORD_ACCESS",
              "value": "true"
          },
          {
              "name": "USER_NAME",
              "value": "{{username}}"
          },
          {
              "name": "USER_PASSWORD",
              "value": "{{password}}"
          }
      ],
      "volumesFrom": [],
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "lf_dev_gerrit",
              "awslogs-region": "us-east-1",
              "awslogs-stream-prefix": "lf-dev-gerrit-logstream"
          }
      },
      "systemControls": []
    }
  ],
  "volumes": [
  ]
}
